<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/header5"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#009688"
        android:padding="12dp">
        <TextView
            android:id="@+id/title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="📘 Mon Cours"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header5"
        android:layout_marginTop="16dp"
        android:background="#F1F8E9"
        android:padding="16dp">
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom: -"/>
        <TextView
            android:id="@+id/txtCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_marginTop="6dp"
            android:text="Matière: -"/>
        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCourse"
            android:layout_marginTop="6dp"
            android:text="Niveau: -"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/actions5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardUser"
        android:layout_marginTop="16dp"
        android:background="#FAFAFA"
        android:padding="16dp">
        <Button
            android:id="@+id/btnLesson"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="📖 Leçon"
            android:textAllCaps="false"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/btnLesson"
            android:layout_marginTop="8dp"
            android:text="📝 Quiz"
            android:textAllCaps="false"
            android:backgroundTint="#00796B"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/actions5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Retour (confirmer)"
        android:textAllCaps="false"
        android:backgroundTint="#CFD8DC"/>
</RelativeLayout>
