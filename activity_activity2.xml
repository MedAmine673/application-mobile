<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputCourse2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_course"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <SeekBar
        android:id="@+id/seekLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="2"
        app:layout_constraintTop_toBottomOf="@id/inputCourse2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtLevelDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÃ©butant"
        app:layout_constraintTop_toBottomOf="@id/seekLevel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnToActivity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_preview"
        app:layout_constraintTop_toBottomOf="@id/txtLevelDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
